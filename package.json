{
  "name": "es6css",
  "version": "0.2.1",
  "description": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "node-sass --output-style expanded demo --output demo",
    "postbuild": "postcss demo/**/*.css --replace",
    "clean": "del-cli docs demo/**/*.css",
    "docs": "sassdoc dist --config .sassdoc.yml",
    "lint": "sass-lint --config .sasslint.yml --verbose --no-exit",
    "start": "yarn run clean && (yarn run lint & yarn run docs & yarn run build)"
  },
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "del-cli": "^1.1.0",
    "node-sass": "^4.7.2",
    "postcss-cli": "^5.0.0",
    "sass-lint": "^1.12.1",
    "sassdoc": "^2.5.0",
    "sassdoc-theme-flippant": "^0.1.0"
  }
}
